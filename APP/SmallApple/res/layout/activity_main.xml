<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="top"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".SmallAppleMainActivity" >


	<Button
		android:id="@+id/button_connect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:text="@string/button_connect_text" />

	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:text="@string/hello_world" />

	<ImageButton
		android:id="@+id/imageButton_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:contentDescription="@string/ico_dec"
		android:src="@drawable/ico_left" />
	
	<ImageButton
		android:id="@+id/imageButton_backward"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/imageButton_left"
		android:layout_centerHorizontal="false"
		android:layout_centerVertical="false"
		android:layout_toRightOf="@id/imageButton_left"
	
		android:contentDescription="@string/ico_dec"
		android:src="@drawable/ico_backward" />
	
	<ImageButton
		android:id="@+id/imageButton_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_above="@id/imageButton_backward"
		android:layout_toRightOf="@id/imageButton_backward"
	
		android:contentDescription="@string/ico_dec"
		android:src="@drawable/ico_right" />
		
	<ImageButton
		android:id="@+id/imageButton_forward"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@id/imageButton_left"
		android:layout_alignLeft="@id/imageButton_backward"
		android:layout_toRightOf="@id/imageButton_left"
		
		android:contentDescription="@string/ico_dec"		
		android:src="@drawable/ico_forward" />
	
	<ImageButton
		android:id="@+id/imageButton_rise"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="false"
		android:layout_alignParentStart="false"
		android:layout_alignTop="@id/imageButton_forward"
		android:layout_centerHorizontal="false"
		android:layout_centerInParent="false"
		android:layout_centerVertical="false"
		android:layout_marginRight="10dp"

		android:contentDescription="@string/ico_dec"		
		android:layout_toLeftOf="@id/button_connect"
		android:src="@drawable/ico_rise" />
	
	<ImageButton
		android:id="@+id/imageButton_falling"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@id/imageButton_rise"
		android:layout_alignTop="@id/imageButton_backward"
		android:contentDescription="@string/ico_dec"		
		android:src="@drawable/ico_falling" />

</RelativeLayout>